<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <!-- SECTION TABLE -->

    <div class="container">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Digipicture</th>
            <th scope="col">Level</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(element => { %>
          <tr>
            <td><%= element.id%></td>
            <td><%= element.name %></td>
            <td>
              <img
                src="<%=element.img%>"
                alt="photo digimon"
                style="width: 100px; height: 100px"
              />
            </td>
            <td><%= element.level%></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <%- include('_link') %>
  </body>
</html>
